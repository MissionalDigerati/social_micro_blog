.follow-links {
	text-align: right;
	margin-bottom: 20px;
}
.navbar {
	
	div.brand_holder {
		float: left;
	}
	
	a.brand {
		float: none;
		padding-bottom: 1px;
	}
	p.tagline {
		padding: 2px;
		margin: 0px;
		font-size: 12px;
		font-style: italic;
	}
	
	.nav {
		bottom: -20px;
	}
	
	.container {
		position: relative;
	}
}
#site-area {
	background-color: #ffffff;
	position: relative;
	z-index: 20;
}
#repeatable_layer {
	background: url(<%=asset_path "on_the_same_path/repeatable_path.png"%>) repeat-y;
	background-position: -2px;
}
.sidebar {
	position: relative;
	text-align: center;
}
#start_path {
	background: url(<%=asset_path "on_the_same_path/start_path.png"%>) no-repeat;
	background-color: #CDDFF3;
	height: 1179px;
	position: absolute;
	width: 220px;
	z-index: 1;
}
#footer {
	background: url(<%=asset_path "on_the_same_path/footer.png"%>) no-repeat;
	height: 352px;
	position: relative;
	width: 100%;
	background-position: -1px;
	z-index: 1;
}
#blog-posts {
	padding-top: 20px;
	padding-right: 2%;
	padding-left: 2%;
	margin: 0px;
	width: 96%;
}
.sidebar-nav {
	margin-top: 15px;
}
/* Pagination */
#blog-posts .pagination{
	float: right;
}
#blog-posts .pagination a, #blog-posts .pagination span {
	padding: 8px;
	line-height: 14px;
	height: 16px;
}
#blog-posts .pagination a {
	border: none;
	padding: 0px;
}

#blog-posts .pagination a:hover, #blog-posts .pagination span:hover {
	background-color: whiteSmoke;
}
#blog-posts .pagination span:first-child {
	border-left: 1px solid #DDD;
}
#blog-posts .pagination span.current {
	background-color: whiteSmoke;
}
#blog-posts .pagination {
	margin: 0px;
}
.gamepiece {
	height: 200px;
	z-index: 4;
}
form div.address-field {
  display: none;
}
div.spacer_500 {
  height: 500px;
}
div.spacer_775 {
  height: 775px;
}
.add-this {
	position: absolute;
	top: 5px;
	right: 0px;
	width: 140px;
	text-align: center;
}
p.copyright {
  font-size: 11px;
  font-style: italic;
}