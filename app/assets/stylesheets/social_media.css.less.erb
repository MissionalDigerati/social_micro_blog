// Core variables and mixins
@import "twitter/bootstrap/bootstrap";
.post-box {
	position: relative;
	margin: 15px 0;
	padding: 14px 19px 39px;
	background-color: white;
	border: 1px solid #DDD;
	.border-radius(5px);
	border-image: initial;
}
.post-box .date-box {
  position: absolute;
  bottom: -1px;
  left: -1px;
  padding: 3px 7px;
  font-size: 12px;
  background-color: #ffffff;
  border-bottom: 1px solid #ddd;
  border-left: 1px solid #ddd;
  color: #9da0a4;
	.border-bottom-left-radius(4px);
}
.post-box .powered-by-box {
  position: absolute;
  top: -1px;
  right: -1px;
  padding: 3px 7px;
  font-size: 10px;
  font-weight: normal;
  background-color: whiteSmoke;
  border: 1px solid #ddd;
	.border-bottom-left-radius(4px);
	.border-top-right-radius(4px);
	img {
		margin-top: -2px;
	}
}
.post-box .twitter-action-box {
  position: absolute;
  bottom: -1px;
  right: -1px;
  padding: 3px 7px;
  font-size: 10px;
  font-weight: bold;
  background-color: #ffffff;
  border-bottom: 1px solid #ddd;
  border-right: 1px solid #ddd;
	.border-bottom-right-radius(4px);
}
img.jp_api_profile {
    height: 150px;
    margin-top: 15px;
}
.post-box .profile-box {
	margin-bottom: 5px;
	
	img.profile-img {
		float: left;
		margin-right: 5px;
        height: 48px;
	}
	
	a {
		
		&.profile-name {
			color: #000000;
			font-weight: bold;
		}
		
		color: #b2b2b2;

		&:hover {
			color: #666666; 
		}

	}
	
	.details {
		float: left;
		clear: right;
	}
}
/*Twitter Actions*/
.twitter-action-box a {
	color: #b2b2b2;
	margin-top: 1px;
  cursor: pointer;
	
	&:hover {
		color: #666666; 
	}
}
[class^="socialicon-twit-"],
[class*=" socialicon-twit-"] {
	display: inline-block;
  height: 16px;
  .ie7-restore-right-whitespace();
  line-height: 16px;
  vertical-align: top;
  background-image: url(<%=asset_path "twitter/controls_custom.png"%>);
  background-repeat: no-repeat;
  margin-top: 1px;
  cursor: pointer;
}

.socialicon-twit-reply{
	background-position: 0px 0px;
  width: 48px;
	
	&:hover{ background-position: -47px 0px;}
}

.socialicon-twit-retweet{
	background-position: -95px 0px;
  width: 62px;
	
	&:hover{ background-position: -157px 0px;}
}

.socialicon-twit-fav{
	background-position: -219px 0px;
  width: 62px;
	
	&:hover{ background-position: -281px 0px;}
}
h3.post_title {
  font-size: 14px;
  margin-bottom: 0;
}
div.jp_unreached {
  div.post_wrap > img {
      float: left;
      margin-right: 10px;
  }
  h3 {
    line-height: 20px;
  }
}